<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/infoExam"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/infoExam"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/resultExam"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/resultExam"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/dateExam"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/dateExam"
        android:textColor="@color/textColor"/>

    <ImageButton
        android:id="@+id/edit_exam"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="@string/edit_exams"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/delete_exam"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="@string/delete_exams"
        android:background="@null"/>

</LinearLayout>